{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "paths": {
      "vue-termui": ["packages/termui/src/index.ts"]
    }
  },
  "include": [
    "auto-imports.d.ts",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.d.ts",
    "packages/*/src/**/*.vue",
    "packages/*/vite.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
