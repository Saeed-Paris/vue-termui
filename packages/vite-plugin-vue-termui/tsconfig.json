{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
